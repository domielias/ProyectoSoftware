<!doctype html>
<html>
    <body>
        <head>
            <meta charset="UTF-8">
            <style>
            </style>
        </head>
        <div style="text-align: center; margin-top: 48px; margin-bottom: 48px;">
            <%= image_tag wicked_pdf_asset_base64('Logo PUCMM (Color Azul).png'), :style=>"margin:0px;padding:0px", :width=>"91.2" %>
            <h4 style="color: #0053fa; margin-top: 24px">Pontificia Universidad Católica Madre y Maestra</h4>
        </div>
        <h1>Estudiantes admitidos</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>ID estudiante</th>
                    <th>Sexo</th>
                    <th>Egresado</th>
                </tr>
            </thead>
            <tbody>
                <% n=0 %>
                <% @estudiantes.where(admitido: true).each do |estudiante| %>
                    <tr class="table-secondary">
                        <td><%= n+=1 %></td>
                        <td><%= estudiante.persona.nombres %></td>
                        <td><%= estudiante.persona.apellidos %></td>
                        <td><%= estudiante.persona.id_campus %></td>
                        <td><%= estudiante.sexo %></td>
                        <td><%= estudiante.egresado ? :Si : :No %></td>
                    </tr>
                    <% if estudiante.clases.count > 0 %>
                        <tr>
                            <td colspan="6">
                                <table class="table table-bordered table-sm">
                                    <thead>
                                        <tr>
                                            <th>No. clase</th>
                                            <th>Sección</th>
                                            <th>Asignatura</th>
                                            <th>Profesor</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% estudiante.clases.each do |clase| %>
                                            <tr>
                                                <td><%= clase.no_clase %></td>
                                                <td><%= clase.seccion %></td>
                                                <td><%= clase.asignatura.nombre %></td>
                                                <td><%= clase.profesor.persona.id_campus_nombres_apellidos %></td>
                                            </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    <% end %>
            </tbody>
            <% end %>
        </table>
    </body>
</html>