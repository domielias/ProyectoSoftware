<h1>Estudiantes admitidos</h1>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>ID estudiante</th>
            <th>Sexo</th>
            <th>Egresado</th>
        </tr>
    </thead>
    <tbody>
        <% n=0 %>
        <% @estudiantes.where(admitido: true).each do |estudiante| %>
            <tr class="table-secondary">
                <td><%= n+=1 %></td>
                <td><%= estudiante.persona.nombres %></td>
                <td><%= estudiante.persona.apellidos %></td>
                <td><%= estudiante.persona.id_campus %></td>
                <td><%= estudiante.sexo %></td>
                <td><%= estudiante.egresado ? :Si : :No %></td>
            </tr>
            <% if estudiante.clases.count > 0 %>
                <tr>
                    <td colspan="6">
                        <table class="table table-bordered table-sm">
                            <thead>
                                <tr>
                                    <th>No. clase</th>
                                    <th>Secci√≥n</th>
                                    <th>Asignatura</th>
                                    <th>Profesor</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% estudiante.clases.each do |clase| %>
                                    <tr>
                                        <td><%= clase.no_clase %></td>
                                        <td><%= clase.seccion %></td>
                                        <td><%= clase.asignatura.nombre %></td>
                                        <td><%= clase.profesor.persona.id_campus_nombres_apellidos %></td>
                                    </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </td>
                </tr>
            <% end %>
    </tbody>
    <% end %>
</table>