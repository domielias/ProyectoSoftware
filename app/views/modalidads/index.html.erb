<p id="notice"><%= notice %></p>

<h1>Modalidads</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @modalidads.each do |modalidad| %>
      <tr>
        <td><%= modalidad.nombre %></td>
        <td><%= link_to 'Show', modalidad %></td>
        <td><%= link_to 'Edit', edit_modalidad_path(modalidad) %></td>
        <td><%= link_to 'Destroy', modalidad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Modalidad', new_modalidad_path %>
