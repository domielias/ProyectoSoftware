<section class="content">
  <div class="container-fluid">
    <div class="row">
      <!-- Primera columna -->
      <div class="col-md-4">
        <div class="card card-secondary ">
          <div class="card-header">
            <h3 class="card-title">Crear Programa EPE Solicitado</h3>
          </div>
          <%= form_with model: @programa_epe_solicitado, url: "programa_epe_solicitados" do |form| %>
            <div class="card-body">
                <div class="form-group">
                  <%= form.label :nombre, 'Nombre' %>
                  <%= form.text_field :nombre, {class:"form-control", placeholder: 'Nombre',name:"programa_epe_solicitado[nombre]" } %>
                </div>
                <div class="float-right">
                  <%= form.submit 'Finalizar', {class: "btn bg-gradient-success"} %>
                </div>
            </div>
          <% end %>
        </div>
      </div>
      <!-- Segunda columna -->
      <div class="col-md-4">
        <div class="card card-secondary ">
          <div class="card-header">
            <h3 class="card-title">Crear Carrera Solicitada</h3>
          </div>
          <%= form_with model: @carrera_solictada, url: "carrera_solicitadas" do |form| %>
            <div class="card-body">
                <div class="form-group">
                  <%= form.label :nombre, 'Nombre' %>
                  <%= form.text_field :nombre, {class:"form-control", placeholder: 'Nombre'} %>
                </div>
                <div class="float-right">
                  <%= form.submit 'Finalizar', {class: "btn bg-gradient-success"} %>
                </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-4"> 
        <div class="card card-secondary ">
          <div class="card-header">
            <h3 class="card-title">Introducir un nuevo Pa√≠s</h3>
          </div>
          <%= form_with model: @pai, url: "pais" do |form| %>
            <div class="card-body">
                <div class="form-group">
                  <%= form.label :nombre, 'Nombre' %>
                  <%= form.text_field :nombre, {class:"form-control", placeholder: 'Nombre'} %>
                </div>
                <div class="form-group">
                  <%= form.label :nacionalidad, 'Nacionalidad' %>
                  <%= form.text_field :nacionalidad, {class:"form-control", placeholder: 'Nacionalidad'} %>
                </div>
                <div class="float-right">
                  <%= form.submit 'Finalizar', {class: "btn bg-gradient-success"} %>
                </div>
            </div>
          <% end %>
        </div>
      </div>
      <!-- Tercera columna -->
    </div><!-- Cerrando Row -->
    <div class="row">
      <!-- Primera columna -->
      <div class="col-md-4">
        <div class="card card-secondary ">
          <div class="card-header">
            <h3 class="card-title">Crear un Programa de Movilidad</h3>
          </div>
          <%= form_with model: @programa_internacional, url: "programa_internacionals" do |form| %>
            <div class="card-body">
                <div class="form-group">
                  <%= form.label :nombre, 'Nombre' %>
                  <%= form.text_field :nombre, {class:"form-control", placeholder: 'Nombre'} %>
                </div>
                <div class="float-right">
                  <%= form.submit 'Finalizar', {class: "btn bg-gradient-success"} %>
                </div>
            </div>
          <% end %>
        </div>
      </div>
    </div><!-- Cerrando Row -->
  </div><!-- Container Row -->
</section>
