<p id="notice"><%= notice %></p>


<section class="content">
  <div class="container-fluid">
    <h1>Bloques</h1>
    <table class="table table-striped display" role='datatable'>
      <thead>
        <tr>
          <th>Creador</th>
          <th>Ciclo</th>
          <th>Categor√≠a</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @bloques.each do |bloque| %>
          <tr>
            <td><%= bloque.creador %></td>
            <td>
             <% if !bloque.ciclo.nil? %>
               <%= bloque.ciclo_nombre %>
             <% end %>
           </td>
           <td>
            <% if !bloque.category.nil? %>
              <%= bloque.category_nombre %>
            <% end %>
          </td>
            <td class="align-column-content-center"><%= link_to 'Mostrar', bloque, class: "btn btn-info" %></td>
            <td class="align-column-content-center"><%= link_to 'Edit', edit_bloque_path(bloque), class: "btn btn-warning" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%# link_to 'New Bloque', new_bloque_path %>
  </div>
</section>
