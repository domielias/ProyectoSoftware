       </div>
     </div>
      <div class="row col-md-2 col-sm-2">
        <div class="form-group">
          <h6>Asignatura</h6>
            <%= form.collection_select(:asignatura_id, Asignatura.all, :id, :nombre,{},{class:"select2-multiple-dropdown select2-dropdown-width",multiple:true}) %>
        </div>
      </div>
  
    </div>
  </div>

