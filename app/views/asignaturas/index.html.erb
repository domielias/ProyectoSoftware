<p id="notice">
  <%= notice %>
</p>

<section class="content">
  <div class="container-fluid">
    <h1>Asignaturas</h1>
    <div>
      <%= link_to "Generar PDF General" , estudiantes_path(format: "pdf" ), style:"float:right", class:"btn
        btn-success", target: :_blank %>
    </div>
    <div style="overflow-x:auto;">
    <table class="table table-striped display" role='datatable'>
      <thead>
        <tr>
          <th>Nombre Asignatura</th>
          <th>Clave</th>
          <th>Valor teorico</th>
          <th>Valor practico</th>
          <th>Valor credito</th>
          <th>Valor credito</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @asignaturas.each do |asignatura| %>
          <tr>
            <td>
              <%= asignatura.nombre %>
            </td>
            <td>
              <%= asignatura.clave %>
            </td>
            <td>
              <%= asignatura.valor_teorico %>
            </td>
            <td>
              <%= asignatura.valor_practico %>
            </td>
            <td>
              <%= asignatura.valor_credito %>
            </td>
            <td>
              <%= link_to 'Show' , asignatura,{class:"btn bg-gradient-secondary"} %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
    </div>
    <br>
    <div class="float-left">
      <%= link_to 'New Asignatura' , new_asignatura_path,{class:"btn bg-gradient-info"} %>
    </div>
  </div>
</section>