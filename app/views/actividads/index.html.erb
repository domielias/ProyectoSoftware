<p id="notice"><%= notice %></p>

<h1>Actividads</h1>

<table>
  <thead>
    <tr>
      <th>Fecha inicio</th>
      <th>Fecha final</th>
      <th>Descripcion</th>
      <th>Ubicacion</th>
      <th>Forma de transporte</th>
      <th>Dentro de la ciudad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actividads.each do |actividad| %>
      <tr>
        <td><%= actividad.fecha_inicio %></td>
        <td><%= actividad.fecha_final %></td>
        <td><%= actividad.descripcion %></td>
        <td><%= actividad.ubicacion %></td>
        <td><%= actividad.forma_de_transporte %></td>
        <td><%= actividad.dentro_de_la_ciudad %></td>
        <td><%= link_to 'Show', actividad %></td>
        <td><%= link_to 'Edit', edit_actividad_path(actividad) %></td>
        <td><%= link_to 'Destroy', actividad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

