<body class="hold-transition login-page ">
<div class="login-box centered">
  <div class="login-logo">
    <h1>Registrar Usuario</h1>   <%# Aqui ponerle link del portal %>
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="input-group mb-3">
          <%= f.email_field :email, autofocus: true, placeholder: "Correo Electrónico",autocomplete: "email", class:"form-control" %>
          <%# <---input type="email" class="form-control" placeholder="Email"> %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <!-- <div class="input-group mb-3">
          <%#= f.password_field :password,placeholder: "Contraseña", autocomplete: "new-password",class:"form-control" %>
          <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          <%# <input type="password" class="form-control" placeholder="Password"> %>
        </div>
        <div class="input-group mb-3">
          <%#= f.password_field  :password_confirmation,placeholder: "Contraseña nuevamente", autocomplete: "new-password",class:"form-control" %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div> -->
        <div class="field">
          <%= f.check_box :admin %>
          <%= f.label :admin, "Es administrador ?" %>
        </div>

        <div class="field">
          <%= f.check_box :profesor %>
          <%= f.label :profesor, "Es profesor ?" %>
        </div>
        <%= f.fields_for :persona do |prsn| %>
          <div>
            <%= prsn.label :id_campus %><br />
            <%= prsn.text_field :id_campus,placeholder: "ID Campus", autofocus: true,class:"form-control" %>
          </div>
          <div>
            <%= prsn.label :nombres %><br />
            <%= prsn.text_field :nombres, autofocus: true,placeholder: "Nombre",class:"form-control" %>
          </div>
          <div>
            <%= prsn.label :apellidos %><br />
            <%= prsn.text_field :apellidos, autofocus: true,placeholder: "Apellidos",class:"form-control" %>
          </div>
        <% end %>
        <br/>
          <!-- /.col -->
        <div class="">
          <%= f.submit "Registrarse",{class:"btn btn-primary btn-block", data: { confirm: '¿Desea crear este usuario?'}} %>
            <%# <button type="submit" class="btn btn-primary btn-block">Entrar</button> %>
          </div>
          <!-- /.col -->
      <% end %>

      <%= render "devise/shared/links" %>

      <%# render "devise/shared/links" %>
      <%# if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%# link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <%# end %>
    </div>
    <!-- /.login-card-body -->
  </div>
</div>
<!-- /.login-box -->
</body>
