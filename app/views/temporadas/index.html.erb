<p id="notice"><%= notice %></p>

<h1>Temporadas</h1>

<table class="table table-striped display" role='datatable'>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Fecha de inicio</th>
      <th>Fecha final</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @temporadas.each do |temporada| %>
      <tr>
        <td><%= temporada.nombre %></td>
        <td><%= temporada.fecha_inicio %></td>
        <td><%= temporada.fecha_final %></td>
        <td class="align-column-content-center">
          <% if temporada.actual? %>
            <%= link_to 'Finalizar', finalizar_temporada_path(temporada), class: "btn btn-danger" %>
          <% end %>
        </td>
        <td class="align-column-content-center"><%= link_to 'Mostrar', temporada, class: "btn btn-info" %></td>
        <td class="align-column-content-center"><%= link_to 'Editar', edit_temporada_path(temporada), class: "btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

