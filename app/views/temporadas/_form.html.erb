<%= form_with(model: temporada, local: true) do |form| %>
<% if temporada.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(temporada.errors.count, "error") %>
      prohibited this temporada from being saved:</h2>

    <ul>
      <% temporada.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="card-container">
  <div class="card card-default">
    <div class="card-header">
      <h3 class="card-title">Datos Generales
      </h3>
      <div class="card-tools">
        <button type="button" class="btn btn-tool" data-card-widget="collapse">
          <i class="fa fa-minus"></i>
        </button>
      </div>
    </div>

    <div class="row col-md-12 col-sm-12">
      <div class="col-md-4 col-sm-4">
        <div class="form-group">
          <h5>Nombre</h5>
          <%= form.text_field :nombre, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4 col-sm-4">
        <div class="form-group">
          <h5>Fecha de inicio</h5>
          <%= form.date_field :fecha_inicio, {class: "form-control date-input" } %>
        </div>
      </div>
      <div class="col-md-4 col-sm-4">
        <div class="form-group">
          <h5>Fecha de final</h5>
          <%= form.date_field :fecha_final, class: "form-control date-input" %>
        </div>
      </div>
    </div>
  </div>

  <div class="float-right">
    <%= form.submit 'Finalizar', {class: "btn bg-gradient-success"} %>
  </div>
<% end %>
</div>
